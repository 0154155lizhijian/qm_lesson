}
.naviagation{
    width: 120rpx;
    height: 120rpx;
    text-align: center; 
    line-height: 120rpx;
    border-radius: 60rpx;
    margin-bottom: 10rpx;
}


.separation{
    width: 750rpx;
    height: 20rpx;
    background: #F5F7FA;
    margin-top: 20rpx;
}
.hot-car{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    margin-bottom: 42rpx;
    background-color: #5F6670;
    height: 500rpx;
    align-items: center;
}
.title {
    width: 670rpx;
    background-color: blue;
    height: 108rpx;
}
.title-name{
    float: left;
    line-height: 108rpx;
}
