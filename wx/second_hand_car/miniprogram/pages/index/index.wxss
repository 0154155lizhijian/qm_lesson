    width: 100%;
    position: fixed;
    height: 84.338rpx;
    display: flex;
    align-items: center;
    vertical-align: middle;
    flex-direction: row;
    z-index: 100;
    background:white;
}
.city{
    width: 126.506rpx;
    padding-left: 55rpx;
    font-size: 27rpx;
    /* font-size: 15px; */
}
.city_curr{
  color: #5F6670 ;
}
.search{
    width: 475.904rpx;
}
.call{
