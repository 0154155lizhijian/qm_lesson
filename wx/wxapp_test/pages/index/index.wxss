/**index.wxss**/
page{
  background: #F2F1EE;
}

.search-container{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  background-color: #42BD56;
}
.search-container input{
  background-color: #fff;
  color: #AAA;
  margin: 5px 4px 4px 4px;
  padding: 5px 10rpx ;
  height: 20px;
  border-radius: 8px;
}
.search-container icon{
  position: absolute;
  top: 10px;
  right: 20rpx;
  z-index:2;
}

.container{
  width:100%;
  position:relative;
  top:40px;
}

/*header*/
.header {
  padding: 20rpx 30rpx;
}
.header text {
  color: #A6A6A6;
}

/*common list*/
.list-item {
  position: relative;
  overflow: hidden
}

/*index list*/
.index-list-item {
  background: #FFF;
  padding: 15rpx 30rpx;
  overflow: hidden;
}
.index-list-item:active {
  background: #EEE;
}
.index-list-item .cover {
  float: left;
  width: 120rpx;
  height: 160rpx;
  overflow: hidden
}
.index-list-item .cover image.cover-img {
  width: 120rpx;
  height: 160rpx;
}
.index-list-item .content {
  margin-left: 140rpx;
}
.index-list-item .title {
  display: inline-block;
  height: 90rpx;
  padding-top: 20rpx;
  overflow: hidden;
}
.index-list-item .desc  {
  display: block;
  font-size: 30rpx;
  padding-top: 10rpx;
  color: #AAA;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.refresh-footer {
  text-align: center;
  padding: 10rpx 0;
}

.logo {
  text-align:center;
  padding-top:50rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #AAA
}
.logo .text{
  font-size: 40px;
}
.logo image {
  width: 250rpx;
  height: 250rpx;
}